include svg.pug

mixin searchbox(term, label = "Search")
  form.search(method="GET")&attributes(attributes)
    .search__search-input-block
      label.visually-hidden(for="search") #{ label }
      input#search.search__textinput(
        type="text",
        name="term",
        value=term,
        placeholder=`${label}...`
      )
    .search__search-other-block
      block
    +icon-btn("Search").btn--blue.search__btn(type="submit")
      +svg("/images/reso_magnifying_glass.svg#magnifying_glass")
