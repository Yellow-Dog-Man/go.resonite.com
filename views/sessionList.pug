extends layout

block head
  meta(property="og:description", content="Active sessions on Resonite")
  link(type="application/json+oembed", href=jsonUrl)
  link(rel="stylesheet", href="/stylesheets/sessionList.css")

block content
  h1 Active Sessions

  .grid
    each session in sessions
      .grid-item
        p !{ session.name }
        p= `Users: ${session.joinedUsers}/${session.maxUsers}`
        p= `Host: ${session.hostUsername}`
        a(href=`/session/${session.sessionId}`) See details
